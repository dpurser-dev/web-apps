<%
 suits = ["clubs", "diamonds", "hearts", "spades"]
 number = [2,3,4,5,6,7,8,9,10,"ace","jack","king","queen"]
%>

<h1> Card draw </h1>

<p>
<img src="/images/cards/<%=number[rand(0..12)]%>_of_<%=suits[rand(0..3)]%>.svg">
</p>

<p>
<a href="/cards">Draw again</a>
<p>

<h1> Card draw 2</h1>

<%
 suits = ["clubs", "diamonds", "hearts", "spades"]
 ranks = [2,3,4,5,6,7,8,9,10,"ace","jack","king","queen"]

deck =[]

for rank in ranks   
    for suit in suits
        card = "#{rank}_of_#{suit}"
        deck.push(card)
    end
end

shuffled_deck = deck.shuffle
hand = shuffled_deck[0,5]

%>

<% for card in hand %>
    <img src="/images/cards/<%= card %>.svg">
<% end %>


